---
const { searchParams } = new URL(Astro.request.url);
const query = searchParams.get('query') ?? '';
---

<div>
    <label for="searchbar">Search by BFRES or material name</label>
    <input id="searchbar" type="search" placeholder="Filter" value={query} />
</div>

<style>
    div {
        display: flex;
        flex-direction: column;
        align-items: baseline;
        gap: 8px;
    }

    input {
        background-color: var(--md-sys-color-surface);
        border: 1px solid var(--md-sys-color-outline);
        border-radius: 4px;
        height: 40px;
        padding: 0 10px;

        font-size: 16px;
        font-family: inherit;

        flex-grow: 1;

        width: fit-content;
    }
</style>